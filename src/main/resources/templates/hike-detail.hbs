{{#partial "content"}}

    <p>About The Hike:</p>

    <p>{{hikes.nameOfHike}}</p>
    <h5>Created At:</h5>
    <p>{{hikes.createdAt}}</p>
    <h5>Hike status:</h5>
    <p>
        {{#if hikes.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}

        <a href="/hikes/{{hikes.id}}/update">Edit this Hike...</a><br>
        <a href="/hikes/{{hikes.id}}/delete">DELETE this hike. Better have a good reason! (no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}